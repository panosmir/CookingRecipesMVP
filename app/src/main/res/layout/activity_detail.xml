<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C3E50"
    android:scrollbars="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="false">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="416dp"
            android:background="#95a5a6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recipeTitleDetail"
                android:layout_width="354dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="visible"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                tools:layout_conversion_absoluteHeight="24dp"
                tools:layout_conversion_absoluteWidth="368dp"
                tools:layout_conversion_absoluteX="8dp"
                tools:layout_conversion_absoluteY="24dp"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" />

            <EditText
                android:visibility="invisible"
                android:id="@+id/recipeTitleDetailEditText"
                android:layout_width="352dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:hint="Title"
                tools:layout_conversion_absoluteX="8dp"
                tools:layout_conversion_absoluteY="24dp"
                tools:layout_conversion_absoluteWidth="368dp"
                tools:layout_conversion_absoluteHeight="24dp"
                android:layout_marginLeft="8dp"
                card_view:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintHorizontal_bias="0.0"
                android:layout_marginBottom="13dp"
                card_view:layout_constraintBottom_toTopOf="@+id/recipeDescriptionDetailEditText" />

            <TextView
                android:id="@+id/recipeDescriptionDetail"
                android:visibility="visible"
                android:layout_width="354dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingLeft="5dp"
                android:textSize="14sp"
                tools:layout_conversion_absoluteX="8dp"
                tools:layout_conversion_absoluteY="48dp"
                tools:layout_conversion_absoluteWidth="368dp"
                tools:layout_conversion_absoluteHeight="36dp"
                android:layout_marginRight="8dp"
                card_view:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                card_view:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="8dp"
                card_view:layout_constraintTop_toBottomOf="@+id/recipeTitleDetail"
                android:layout_marginBottom="8dp"
                card_view:layout_constraintBottom_toTopOf="@+id/ingredientsRecyclerView"
                card_view:layout_constraintVertical_bias="0.172" />

            <EditText
                android:id="@+id/recipeDescriptionDetailEditText"
                android:layout_width="348dp"
                android:layout_height="200dp"
                android:padding="10dp"
                android:textSize="14sp"
                android:hint="Description"
                tools:layout_conversion_absoluteX="8dp"
                tools:layout_conversion_absoluteY="48dp"
                tools:layout_conversion_absoluteWidth="368dp"
                tools:layout_conversion_absoluteHeight="36dp"
                android:layout_marginLeft="8dp"
                card_view:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                card_view:layout_constraintRight_toRightOf="parent"
                android:layout_marginBottom="8dp"
                card_view:layout_constraintBottom_toTopOf="@+id/saveRecipeButton" />

            <Button
                android:layout_width="wrap_content"
                android:id="@+id/saveRecipeButton"
                android:layout_height="wrap_content"
                android:text="Save"
                android:visibility="invisible"
                card_view:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="94dp"
                android:layout_marginRight="8dp"
                card_view:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintHorizontal_bias="1.0" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:visibility="invisible"
                android:id="@+id/cancelButton"
                card_view:layout_constraintRight_toLeftOf="@+id/saveRecipeButton"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintHorizontal_bias="0.05"
                card_view:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                card_view:layout_constraintTop_toBottomOf="@+id/recipeDescriptionDetailEditText"
                card_view:layout_constraintVertical_bias="0.0" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/ingredientsRecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="112dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent" />


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</ScrollView>